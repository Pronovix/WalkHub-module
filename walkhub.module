/**
 * Returns a hash based on a node.
 *
 * @param stdClass $node
 * @return string
 *   sha1 hash
 */
function walkhub_get_id_hash($node) {
  return sha1($node->uuid . $_SERVER['SERVER_NAME']);
}

/**
 * Returns the origin (protocol + hostname + port) of this server.
 *
 * @return string
 */
function walkhub_get_origin() {
  global $is_https;
  return 'http' . ($is_https ? 's' : '') . "://{$_SERVER['SERVER_NAME']}" . (in_array($_SERVER['SERVER_PORT'], array(80, 443)) ? '' : ":{$_SERVER['SERVER_PORT']}");
}


/**
 * Form for the walkhub recorder.
 */
function walkhub_record_form($form, &$form_state, $floating_record_button = FALSE) {
  $module_path = drupal_get_path('module', 'walkhub');

  $form['#attributes'] = array('class' => array('walkhub-record-form'));

  $form['#action'] = url('walkthrough/record/');
  $form['title'] = array(
    '#type' => 'textfield',
    '#title' => t('Title'),
    '#required' => TRUE,
  );

  $severity_field = field_info_field('field_severity_of_the_change');
  $severity_info_instance = field_info_instance('node', 'field_severity_of_the_change', 'walkthrough');
  $form['severity'] = array(
    '#type' => 'select',
    '#title' => $severity_info_instance['label'],
    '#required' => TRUE,
    '#options' => $severity_field['settings']['allowed_values'],
  );

  $form['url'] = array(
    '#type' => 'textfield',
    '#title' => t('Starting URL'),
    '#attributes' => array(
      'class' => array('edit-url'),
    ),
  );

  $form['use_proxy'] = array(
    '#type' => 'checkbox',
    '#title' => t('Record the walkthrough over the WalkHub proxy (in case you don\'t have the browser or site plugin available)'),
    '#default_value' => 1,
    '#attributes' => array(
      'class' => array('edit-use-proxy'),
    ),
  );

  $form['record'] = array(
    '#type' => 'button',
    '#value' => t('Record'),
    '#attributes' => array(
      'data-proxy-url' => variable_get('walkhub_proxy_url'),
      'class' => array('edit-record'),
    ),
  );

  $form['steps'] = array(
    '#type' => 'textarea',
    '#title' => t('Steps'),
  );

  $form['password_parameter'] = array(
    '#type' => 'checkbox',
    '#title' => t('Generate password parameter'),
  );

  $form['stepcontainer'] = array(
    '#markup' => '<h3>Recorded steps</h3><ul id="steps"></ul>',
  );

  $form['save'] = array(
    '#type' => 'submit',
    '#value' => t('Save'),
  );

  $form['#attached'] = array(
    'js' => array(
      $module_path . '/walkhub.js',
    ),
    'css' => array(
      $module_path . '/walkhub.css',
    ),
  );

  if ($floating_record_button) {
    $form["#attached"]['js'][] = $module_path . '/walkthrough_record_block.js';
    $form["#attached"]['css'][] = $module_path . '/walkthrough_record_block.css';
  }

  return $form;
}
