/**
 * Implements hook_node_presave().
 *
 * @param $node
 */
function walkhub_node_presave($node) {

  if ($node->type == 'walkthrough' && !empty($node->field_raw_input[LANGUAGE_NONE][0]['value']) && empty($node->nid) && !isset($node->clone_from_original_nid)) {
    $source = field_get_items('node', $node, 'field_raw_input', LANGUAGE_NONE);
    if (($result = _walkhub_break_up_to_steps_json($source[0]['value']))) {
      list($steps, $base) = $result;
    } else {
      list($steps, $base) = _walkhub_break_up_to_steps_html($source[0]['value']);
    }

    if ($base) {
      _walkhub_add_default_parameters($base, $node);
    }

    $steps = _walkhub_filter_steps($steps);

    if (!empty($steps)) {
      // Create new nodes based on the selenium source.
      $walkthrough_steps = array();
      foreach ($steps as $key => $step) {
        $steps[$key]['fci'] = _walkhub_create_step($step, $key, $node);
        $walkthrough_steps[$key]['value'] = $steps[$key]['fci']->identifier();
        $walkthrough_steps[$key]['revision_id'] = $steps[$key]['fci']->revision_id;
      }
      $node->field_fc_steps[LANGUAGE_NONE] = $walkthrough_steps;
    }
  }
}

/**
 * Filters walkhub steps, so we can ignore/disable steps we don't want to store.
 *
 * @param array $steps
 * @return array
 */
function _walkhub_filter_steps(array $steps) {
  $ignored_steps = array('waitForPageToLoad');

  $steps = array_filter($steps, function($step) use ($ignored_steps) {
    return (!in_array($step['action'], $ignored_steps));
  });

  return $steps;
}

/**
 * Check that the currently logged in user has the right permission to export
 * walkthroughs.
 *
 * @param $node
 * @return bool
 */
function walkhub_export_access($node) {
  global $user;

  if ($user->uid == 1 || user_access('bypass node access')) {
    return TRUE;
  }

  if (user_access('export any walkthrough')) {
    return TRUE;
  }

  if (user_access('export own walkthrough') && $node->uid == $user->uid) {
    return TRUE;
  }

  return FALSE;
}

/**
 * Adds the 'domain' as a default parameter to the node object.
 *
 * @param string $base
 *   THe base url from the selenium test.
 * @param stdClass $node
 *   THe newly created node object.
 */
function _walkhub_add_default_parameters($base, $node) {
  $host = parse_url($base, PHP_URL_HOST);
  $item = new FieldCollectionItemEntity();
  $item->is_new = TRUE;
  $item->field_name = 'field_parameters';
  $item->setHostEntity('node', $node, $node->language, FALSE);
  $item->field_parameter_name[$node->language][0]['value'] = 'domain';
  $item->field_parameter_default_value[$node->language][0]['value'] = $host;
  $item->save(TRUE);
  $node->field_parameters[$node->language][] = array(
    'value' => $item->identifier(),
    'revision_id' => $item->revision_id,
  );

  if (isset($node->__password_parameter) && $node->__password_parameter) {
    $pwitem = new FieldCollectionItemEntity();
    $pwitem->is_new = TRUE;
    $pwitem->field_name = 'field_parameters';
    $pwitem->setHostEntity('node', $node, $node->language, FALSE);
    $pwitem->field_parameter_name[$node->language][0]['value'] = 'password';
    $pwitem->field_parameter_default_value[$node->language][0]['value'] = '';
    $pwitem->save(TRUE);
    $node->field_parameters[$node->language][] = array(
      'value' => $pwitem->identifier(),
      'revision_id' => $pwitem->revision_id,
    );
  }
}

/**
 * Implements hook_entity_presave().
 */
function walkhub_entity_presave($entity, $type) {
  if ($type === 'field_collection_item' && $entity->field_name === 'field_parameters') {
    $parameter_name = $entity->field_parameter_name[LANGUAGE_NONE][0]['value'];
    if ($parameter_name === 'domain') {
      $url = $entity->field_parameter_default_value[LANGUAGE_NONE][0]['value'];
      $domain = _walkhub_get_domain_from_walkthrough_url_parameter($url);
      if ($domain !== $url) {
        $entity->field_parameter_default_value[LANGUAGE_NONE][0]['value'] = $domain;
      }
    }
  }
}

/**
 * Returns the domain from the $url
 *
 * @param string $url
 *   The provided content for the $url parameter value
 *
 * @return string
 *   [domain]/[path]
 */
function _walkhub_get_domain_from_walkthrough_url_parameter($url) {
  $parsed_url = parse_url($url);
  if (array_key_exists('host', $parsed_url)) {
    $result =  $parsed_url['host'];
    if (!empty($parsed_url['path']) && $parsed_url['path'] !== '/') {
      $result .= $parsed_url['path'];
    }
  } else {
    $result = preg_replace('#^http[s]?://#', '', $url);
  }
  $result = rtrim($result, '/');

  return $result;
}

/**
 * Breaks up the json formatted $source input into steps.
 *
 * @param string $source
 *   JSON-encoded list of steps.
 * @return array|null
 *   Array of steps or NULL on failure.
 */
function _walkhub_break_up_to_steps_json($source) {
  $decoded = json_decode($source, TRUE);
  if (json_last_error() !== JSON_ERROR_NONE) {
    return NULL;
  }

  $base = NULL;
  if (count($decoded) && $decoded[0]['cmd'] === 'open') {
    $base = $decoded[0]['arg0'];
    $decoded[0]['arg0'] = http_build_url($decoded[0]['arg0'], array(
      'host' => '[domain]',
    ));
  }

  $highlightdata = _walkhub_get_supported_selenium_commands();
  return array(array_map(function ($item) use (&$highlightdata) {
    return array(
      'action' => $item['cmd'],
      'xpath' => $item['arg0'],
      'description' => $item['arg1'],
      'highlight' => isset($highlightdata[$item['cmd']]) ?
        ($highlightdata[$item['cmd']] ? $item['arg1'] : $item['arg0']) : '',
    );
  }, $decoded), $base);
}

function _walkhub_get_origin($url) {
  $parsed = parse_url($url);
  unset($parsed['path']);
  unset($parsed['query']);
  unset($parsed['fragment']);

  return http_build_url($parsed);
}

/**
 * Break up to steps $source selenium input.
 *
 * @param $source
 * @return array
 */
function _walkhub_break_up_to_steps_html($source) {
  $highlightdata = _walkhub_get_supported_selenium_commands();

  // Change <br /> to newlines.
  $source = preg_replace('#<br\s*/?>#i', "\n", $source);

  $steps = array();
  $first = TRUE;
  $doc = new DOMDocument();
  // Load the selenium test case.
  $doc->loadHTML($source);
  $basexpath = new DOMXPath($doc);
  $baseList = $basexpath->query('//link[@rel="selenium.base"]');
  $base = $baseList->length ? $baseList->item(0)->getAttribute('href') : NULL;
  $xpath = new DOMXpath($doc);
  // Break up to steps.
  $elements = $xpath->query('//tbody/tr');
  if ($elements->length) {
    // Loop through the steps.
    foreach ($elements as $step => $element) {
      // Get the step attributes.
      $attributes = $element->getElementsByTagName('td');
      foreach ($attributes as $key => $attribute) {
        switch ($key) {
          case 0:
            $steps[$step]['action'] = $attribute->nodeValue;
            break;
          case 1:
            $steps[$step]['xpath'] = $attribute->nodeValue;
            break;
          case 2:
            $steps[$step]['description'] = $attribute->nodeValue;
            break;
        }
      }
      $act = endsWith($steps[$step]['action'], 'AndWait') ?
        substr($steps[$step]['action'], 0, -7) : $steps[$step]['action'];
      $steps[$step]['highlight'] = isset($highlightdata[$act]) ?
        ($highlightdata[$act] ? $steps[$step]['description'] : $steps[$step]['xpath']) : '';
      // Makes all URLs absolute ones.
      if ($steps[$step]['action'] === 'open') {
        $components = parse_url($steps[$step]['xpath']);
        if (empty($components['host'])) {
          $steps[$step]['xpath'] = _walkhub_assemble_url($base, $steps[$step]['xpath'], $first);
          if ($first) {
            $first = FALSE;
          }
        }
      }
    }
  }
  // TODO I think this function should be an iterator object.
  return array($steps, $base);
}

