/**
 * Loads a node if it's content type is 'walkthrough'.
 *
 * @param int $nid
 *   Node ID.
 *
 * @return bool|stdClass
 *   Node on success, false otherwise.
 */
function walkhub_walkthrough_node_load($nid) {
  $node = node_load($nid);

  if ($node && $node->type === 'walkthrough') {
    return $node;
  }

  return FALSE;
}

/**
 * Implements hook_menu_local_tasks_alter().
 *
 * Attach data attributes to the walkthrough play button.
 */
function walkhub_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  module_load_include('inc', 'walkhub');
  if ($data['actions']['count']) {
    foreach ($data['actions']['output'] as &$action) {
      if ($action['#link']['path'] === 'node/%/start') {
        $action['#link']['localized_options']['attributes']['class'][] = 'walkthrough-start';

        $loadfunc = reset($action['#link']['load_functions']);
        $path = explode('/', $action['#link']['href']);
        $nid = $path[1];
        if (is_callable($loadfunc)) {
          $walkthrough = $loadfunc($nid);
          if ($walkthrough) {
            $action['#link']['localized_options']['attributes'] += _walkhub_get_data_attributes($walkthrough);
          }
        }
        break;
      }
    }
  }
}

/**
 * Get data attributes to the walkthrough play button.
 *
 * @param stdClass $walkthrough
 *   Walkthrough to play.
 *
 * @return array
 *   Array of data attributes.
 */
function _walkhub_get_data_attributes(stdClass $walkthrough) {
  $attributes = array();

  // Have to load entities here by hand, instead of entity_uuid_load(), because we are working with local references.
  $prerequuids = walkhub_field_get_references('node', $walkthrough, 'field_prerequisites');
  $ids = entity_get_id_by_uuid('node', $prerequuids);
  $prereqs = entity_load('node', $ids);

  // Attach play via proxy flag.
  $proxy_url = variable_get('walkhub_proxy_url');
  if ($proxy_url && $walkthrough->field_play_via_proxy[LANGUAGE_NONE][0]['value']) {
    $attributes['data-walkthrough-proxy-url'] = $proxy_url;
  }

  // Attach walkthrough uuid.
  $attributes['data-walkthrough-uuid'] = $walkthrough->uuid;

  // Attach prerequisite parameters first (so it can be overridden by the walkthrough).
  foreach ($prereqs as $prereq) {
    foreach (_walkhub_get_parameters($prereq) as $parameter => $default_value) {
      $attributes["data-walkthrough-parameter-{$parameter}"] = $default_value;
    }
  }

  // Attach parameters.
  foreach (_walkhub_get_parameters($walkthrough) as $parameter => $default_value) {
    $attributes["data-walkthrough-parameter-{$parameter}"] = $default_value;
  }

  $attributes['data-embedjs'] = url("node/{$walkthrough->nid}/embed.js", array(
    'absolute' => TRUE,
  ));

  $i = 0;
  foreach ($prereqs as $prereq) {
    $attributes["data-walkthrough-prerequsite-{$i}-{$prereq->uuid}"] = check_plain($prereq->title);
  }

  $attributes['data-embedjskey'] = walkhub_get_id_hash($walkthrough);
  $attributes['data-social-sharing'] = variable_get('walkhub_social_sharing', TRUE);

  $attributes['data-walkthrough-edit-link'] = url("node/{$walkthrough->nid}/edit", array('absolute' => TRUE));

  $severity = field_get_items('node', $walkthrough, 'field_severity_of_the_change');

  if ($severity) {
    $severity_field = field_info_field('field_severity_of_the_change');
    $severity_info_instance = field_info_instance('node', 'field_severity_of_the_change', 'walkthrough');
    $attributes['data-walkthrough-severity'] =  $severity[0]['value'];
    $attributes['data-walkthrough-severity-text'] = t('@label: %severity', array('@label' => t($severity_info_instance['label']), '%severity' => t($severity_field['settings']['allowed_values'][$severity[0]['value']])));
  }

  return $attributes;
}

